{
    "name": "nair-solutions-root",
    "version": "1.0.0",
    "description": "Root package for N.A.I.R Solutions",
    "scripts": {
        "server": "npm run dev --prefix backend",
        "client": "npm run dev --prefix frontend",
        "ai-server": "cd ai-service && python app.py",
        "dev": "npx concurrently \"npm run server\" \"npm run client\" \"npm run ai-server\"",
        "build": "npm run build --prefix frontend",
        "install-all": "npm install --prefix backend && npm install --prefix frontend && pip install -r ai-service/requirements.txt",
        "docker-up": "docker-compose up --build",
        "docker-down": "docker-compose down"
    },
    "dependencies": {
        "i18next": "^25.8.0",
        "i18next-browser-languagedetector": "^8.2.0",
        "react-i18next": "^16.5.4"
    }
}
